
@{
    ViewBag.Title = "Kanban";
}

<div style="width:100%; margin: 0 auto 0 auto;" ng-app="kanbanBoardApp">

    <div class="row tooltip-toggle" ng-controller="boardCtrl">

        @*<div ng-include="'/AppScript/busyModal.html'" ng-show="isLoading"></div>*@

        <div class="col-lg-4 panel panel-primary colStyle" id="{{col.Id}}" kanban-board-drop="over"
             ng-repeat="col in columns">
            <div class="panel-heading" style="margin-bottom: 10px;">
                <h3 class="panel-title">{{col.Name}}</h3>
            </div>
            <div class="thumbnail" draggable="true" kanban-board-dragg="task"
                 ng-repeat="task in col.Tasks" style="margin-bottom: 10px;">
                <div class="caption">
                    <button class="btn btn-sm" data-original-title="Parent Task Blah" type="button" data-toggle="tooltip" data-placement="right" title="">Parent</button>
                    <h5><strong>{{task.Name}}</strong></h5>
                    <p>{{task.Description}}</p>
                    <p><a href="#" class="btn btn-primary btn-sm" role="button">Edit</a></p>
                </div>
            </div>
        </div>
    </div>

</div>

@section Scripts{
    <style type="text/css">
    .colStyle {
        margin-right: 10px;
        width: 32%;
        padding-top: 10px;
        margin-top: 20px;
        border: 1px solid grey;
        min-height: 500px;
    }

    .busyIndicator .alert {
        left: 40%;
        top: 5%;
        position: fixed;
        z-index: 1050;
        width: 400px;
        height: 40px;
        padding-left: 10px;
        padding-top: 10px;
        background-color: lightgreen;
        color: black;
        border-color: transparent;
    }

    .busyIndicator .backgroundMask {
        top: 0;
        left: 0;
        position: fixed;
        width: 100%;
        height: 100%;
        opacity: 0.5;
        background: black;
        z-index: 1049;
    }

    .over {
        background-color: #fff;
        border: 2px dashed red;
    }

    </style>

<script src="~/Scripts/angular.js"></script>

<script src="~/Scripts/KanbanApp/main.js"></script>
<script src="~/Scripts/KanbanApp/kanbanDragDrop.js"></script>
<script src="~/Scripts/KanbanApp/boardService.js"></script>
<script src="~/Scripts/KanbanApp/boardCtrl.js"></script>

    <script type="text/javascript">
        $('.tooltip-toggle').tooltip({
            selector: "[data-toggle=tooltip]",
            container: "body"
        });
    </script>
}