@model DAL.Sprint

@{
    ViewBag.Title = "Editar sprint";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-0">
        <section class="panel">
            <header>
                <div class="text-center h4">
                    Editar sprint
                </div>
            </header>

            <div class="panel-body">
                @using (Html.BeginForm("Edit", "Sprint", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.Id)
                    @Html.HiddenFor(model => model.ProjectId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.StartDate, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.StartDate, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.StartDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EndDate, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.EndDate, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EndDate)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-9 col-lg-offset-3">
                            <input type="submit" value="Guardar" class="btn btn-primary" />
                        </div>
                    </div>
                }
                <p>
                    @Html.ActionLink("Volver al índice", "Index")
                </p>
            </div>
        </section>
    </div>
</div>

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@

    <link rel="stylesheet" href="@Url.Content("~/Content/datepicker.css")" />
    <script type="text/javascript" src="@Url.Content("~/Scripts/moment.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/moment-with-locales.min.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/moment.i18n/es.js")"></script>
    <script type="text/javascript" src="@Url.Content("~/Scripts/moment-datepicker.min.js")"></script>

    <script type="text/javascript">
        $(function () {
            $("#StartDate").datepicker({
                language: 'es'
            });
            $("#EndDate").datepicker({
                language: 'es'
            });

        });
    </script>
}
