@model QuickSoftwareMgmt.Models.Views.TestVM

@{
    ViewBag.Title = "Crear prueba";
}
<div class="row">
    <div class="col-lg-6 col-lg-offset-0">
        <section class="panel">
            <header>
                <div class="text-center h4">
                    Crear prueba
                </div>
            </header>

            <div class="panel-body">
                @using (Html.BeginForm("Create", "Test", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()

                    <hr />
                    @Html.ValidationSummary(false)

                    @Html.HiddenFor(model => model.ProjectId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.CreationDate, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.CreationDate, "{0:dd/MM/yyyy}", new { @class = "form-control", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.CreationDate)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Title, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Steps, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextAreaFor(model => model.Steps, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Steps)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.VersionOriginId, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.DropDownList("VersionOriginId", null, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.VersionOriginId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.TestOutcomeId, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.DropDownList("TestOutcomeId", null, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.TestOutcomeId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.EstimatedTime, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.EstimatedTime, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EstimatedTime)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.RemainingTime, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.RemainingTime, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RemainingTime)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.SprintId, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.DropDownList("SprintId", null, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SprintId)
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.UserId, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.DropDownList("UserId", null, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserId)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-9 col-lg-offset-3">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                        </div>
                    </div>
                }
            </div>
        </section>

    </div>
</div>
@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
}
