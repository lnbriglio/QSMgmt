@model DAL.Test

@{
    ViewBag.Title = "Edit";
}
<div class="col-lg-6 col-lg-offset-0">
    <h2>Editar</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Test</h4>
            <hr />
            @Html.ValidationSummary(true)
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.CreationDate)

            <div class="form-group">
                @Html.LabelFor(model => model.Title)
                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Title)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Description)
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.ProjectId)
                @Html.DropDownList("ProjectId", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ProjectId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Steps)
                @Html.TextAreaFor(model => model.Steps, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Steps)
            </div>


            <div class="form-group">
                @Html.LabelFor(model => model.VersionOriginId)
                @Html.DropDownList("VersionOriginId", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VersionOriginId)
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.TestOutcomeId)
                @Html.DropDownList("TestOutcomeId", null, String.Empty, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.TestOutcomeId)
            </div>

            <div class="form-group">
                    <input type="submit" value="Guardar" class="btn btn-default" />
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Volver al índice", "Index")
    </div>
</div>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
