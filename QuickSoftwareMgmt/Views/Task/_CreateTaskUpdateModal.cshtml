@model DAL.TaskUpdate


<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Update", "Task", FormMethod.Post, new { id = "form-updateTask" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Tarea #@Model.TaskId - Actualizar estado</h4>
                <span class="label label-primary ">@Model.PreviousTaskState.Name <i class="fa fa-arrow-right"></i> @Model.TaskState.Name</span>

            </div>
            <div class="modal-body">

                <div class="row">
                    <div class="form-horizontal">
                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.TaskId)
                        @Html.HiddenFor(model => model.PreviousTaskStateId)
                        @Html.HiddenFor(model => model.TaskStateId)
                        @Html.HiddenFor(model => model.EventDate)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Comment, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-8">
                                @Html.TextAreaFor(model => model.Comment, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Comment)
                            </div>
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.ElapsedTime, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-8">
                                @Html.TextBoxFor(model => model.ElapsedTime, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.ElapsedTime)
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <input type="submit" value="Guardar" class="btn btn-primary" id="btnSubmit" />
                </div>
            </div>
        }
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->
