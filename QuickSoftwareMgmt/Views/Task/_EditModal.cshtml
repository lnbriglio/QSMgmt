@model DAL.Task


<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Edit", "Task", FormMethod.Post, new { id = "form-editTask" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Editar tarea #@Model.Id</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.BacklogItemId)
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.CreationDate)
                        @Html.HiddenFor(model => model.TaskStateId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Title, new { @class = "col-lg-3 control-label" })
                            <div class="col-lg-8">
                                @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.Title)
                            </div>
                        </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.Description, new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-8">
                                    @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.Description)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.EstimatedTime, new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(model => model.EstimatedTime, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.EstimatedTime)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.RemainingTime, new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-8">
                                    @Html.TextBoxFor(model => model.RemainingTime, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.RemainingTime)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.SprintId, new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-8">
                                    @Html.DropDownList("SprintId", null, String.Empty, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.SprintId)
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(model => model.UserId, new { @class = "col-lg-3 control-label" })
                                <div class="col-lg-8">
                                    @Html.DropDownList("UserId", null, String.Empty, new { @class = "form-control" })
                                    @Html.ValidationMessageFor(model => model.UserId)
                                </div>
                            </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button>
                    <input type="submit" value="Guardar" class="btn btn-primary" id="btnSubmit" />
                </div>
            </div>
        }
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->