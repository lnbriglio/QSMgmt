@model DAL.Task


<div class="modal-dialog">
    <div class="modal-content">
        @using (Html.BeginForm("Edit", "Task", FormMethod.Post, new { id = "form-editTask" }))
        {
            @Html.AntiForgeryToken()
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Editar tarea #@Model.Id</h4>
            </div>
            <div class="modal-body">
                <div class="col-lg-12 col-lg-offset-0">
                    <div class="form-horizontal">

                        @Html.ValidationSummary(true)
                        @Html.HiddenFor(model => model.BacklogItemId)
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.CreationDate)
                        @Html.HiddenFor(model => model.TaskStateId)

                        <div class="form-group">
                            @Html.LabelFor(model => model.Title)
                            @Html.TextBoxFor(model => model.Title, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Title)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.Description)
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.EstimatedTime)
                            @Html.TextBoxFor(model => model.EstimatedTime, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EstimatedTime)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.RemainingTime)
                            @Html.TextBoxFor(model => model.RemainingTime, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.RemainingTime)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.SprintId)
                            @Html.DropDownList("SprintId", null, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.SprintId)
                        </div>

                        <div class="form-group">
                            @Html.LabelFor(model => model.UserId)
                            @Html.DropDownList("UserId", null, String.Empty, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.UserId)
                        </div>

                    </div>

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                    <input type="submit" value="Guardar" class="btn btn-default" id="btnSubmit" />
                </div>
            </div>
        }
    </div>
    <!-- /.modal-content -->
</div>
<!-- /.modal-dialog -->