@model DAL.Project

@{
    ViewBag.Title = "Crear proyecto";
}

<div class="row">
    <div class="col-lg-6 col-lg-offset-0">
        <section class="panel">
            <header>
                <div class="text-center h4">
                    Crear proyecto
                </div>
            </header>

            <div class="panel-body">
                @using (Html.BeginForm("Create", "Project", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()


                    <hr />
                    @Html.ValidationSummary(true)
                    @Html.HiddenFor(model => model.CompanyId)

                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Description, new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-8">
                            @Html.TextAreaFor(model => model.Description, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.Description)
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-9 col-lg-offset-3">
                            <input type="submit" value="Crear" class="btn btn-primary" />
                        </div>
                    </div>

                }

                <p>
                    @Html.ActionLink("Volver al índice", "Index")
                </p>
            </div>
        </section>
    </div>

</div>



@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
}
